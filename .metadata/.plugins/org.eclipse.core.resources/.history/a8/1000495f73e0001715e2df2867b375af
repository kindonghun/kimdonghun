package day04;

import java.util.Scanner;

public class q4 {
	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		System.out.print("첫번째과목점수:");
		int a = sc.nextInt();
		System.out.print("두번째과목점수:");
		int b = sc.nextInt();
		System.out.print("세번째과목점수:");
		int c = sc.nextInt();
		
		int sum =(a+b+c);
		double avg =(double)sum/3.f;
		char rank;
		
		if(90<=100)
		 rank = 'A';
		else if(80 <=89)
		rank = 'B';
		else if(70 <= 79)
			 rank = 'C';
		else if(60 <= 69)
			 rank = 'D';
		else
			 rank = 'F';
		System.out.println("당신의 과목합계는"+sum+"이고 당신의 평균은"+avg+"이고 등급은"+rank+입니다);
	}
	
}
