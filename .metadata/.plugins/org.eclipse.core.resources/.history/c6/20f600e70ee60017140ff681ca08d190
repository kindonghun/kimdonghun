package day07;

import java.util.Scanner;

public class test2 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String[] sub = {"국어","수학","영어"};
		
		int[] score = new int[sub.length+1];  //점수
		double avg= 0.0;
		for(int i=0; i<sub.length; i++) {			System.out.println(sub[i]+"점수:");
			score[i] =sc.nextInt();
		}while(score[i]<0 || score[i]>100);
		score[sub.length] += score[i]; 
		}
		
		avg=(double)score[sub.length] / sub.length;
		System.out.println("합계"+score[sub.length]);
		System.out.println("평균"+String.format("%.2f", avg));
		
	}
}
