		for(int i=0; i<=10;i++) {
			System.out.println(sum+"번째정수:");
			int a =sc.nextInt();
			sum+= 1;
		}
		avg= (double)sum/10.f;
		System.out.println("전체정수평균:"+avg);
	}
}
