package day03;

import java.util.Scanner;

public class test2 {
	public static void main(String[] ages, Object result) {
		
		Scanner sc =new Scanner(System.in);
		System.out.println("합격여부를 입력하세요:(1. 합격  2.불합격)");
		int a = sc.nextInt();
		
		System.out.println((a==1? "합격":"불합격"));
		
		Scanner op = new Scanner(System.in);
		System.out.println("산술연사자를 입력하세요(+,-,*,/):");
		char b =sc.nextLine().charAt(0);
		result = ( b=='+'|| b=='-'||
						  b=='*'|| b=='/')? 
						"산술연산자입니다.":"산술연산자가아닙니다.";
				
		System.out.println(op+"는"+result);
	}
}
